<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "Elenco")}", employees_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Crea")}", new_employee_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "Elenco")  %> Dipendenti</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">
            <%= t("activerecord.attributes.employee.lastname", :default => t("activerecord.labels.lastname", :default => "Cognome")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.employee.firstname", :default => t("activerecord.labels.firstname", :default => "Nome")) %>
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @employees.each do |employee| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= link_to employee.lastname, employee_path(employee) %>
          </td>
          <td>
            <%= link_to employee.firstname, employee_path(employee) %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Mostra")}", employee_path(employee) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Modifica")}", edit_employee_path(employee) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Elimina")}", employee_path(employee), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Sei sicuro?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= paginate @employees  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
