			<div class="liner">
		      <%= form_for :employee, :url => employees_path, :html => { :class => :form, :multipart => true } do |f| -%>
		        <%= render :partial => "form", :locals => {:f => f} %>
		      <% end -%>
			</div>
		  </div>  
		</div>
	  </div>
	</div>
	<div style="margin-top: 30px;"></div>		
  </div>
  <div class="column" id="global_sidebar">
    <div class="liner">
      <div id="global_nav">
        <ul>
	      <li>
		    <a class="" href=#>Contatti</a>
		  </li>
	      <li>
		    <a class="" href=#>Aziende</a>
		  </li>
	    </ul>
      </div>
      <div id="recent_items">  
	      <hr>
	      <h4>Usati di recente</h4>
	      <div class="recent_items">
		  </div>
      </div>          
    </div>
  </div>
