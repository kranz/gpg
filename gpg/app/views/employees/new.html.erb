<div id="inner_wrapper">
  <div id="main_body" class="column">
	<div id="blank_slate" class="clearfix"></div>
    <div id="screen_body">
      <div id="page_sidebar">
	    <div class="liner">
		  <div class="sidebox_wrapper">
			<div class="liner">
              <div class="sidebox closedbox">
	            <h5>
		          <strong>Other ways to add people</strong>
		        </h5>
                <p>
	              Looking to add multiple people at once?
	            </p>
	            <ul>
		          <li>
			        <a behavior="return_to" href="#">Upload a vCard file</a>
			      </li>
		          <li>
