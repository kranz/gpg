<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "Elenco")}", customers_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Crea")}", new_customer_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "Elenco dei")  %> Clienti</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th>
            <%= t("activerecord.attributes.customer.name", :default => t("activerecord.labels.name", :default => "Nome")) %>
          </th>
          <th><%= t("web-app-theme.created_at", :default => "Codice")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @customers.each do |customer| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= link_to customer.name, customer_path(customer) %>
          </td>
          <td>
            <%= customer.code %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Visualizza")}", customer_path(customer) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Modifica")}", edit_customer_path(customer) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Elimina")}", customer_path(customer), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Sei sicuro?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= paginate @customers  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
