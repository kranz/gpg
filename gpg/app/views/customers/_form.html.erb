
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.customer.name", :default => "Nome"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
    <span class="description">Inserire qui la ragione sociale del cliente</span>
  </div>

  <div class="group">
    <%= f.label :vatcode, t("activerecord.attributes.customer.vatcode", :default => "Partita IVA"), :class => :label %>
    <%= f.text_field :vatcode, :class => 'text_field' %>
    <span class="description">La Partita IVA, senza il codice nazione</span>
  </div>

  <div class="group">
    <%= f.label :fiscalcode, t("activerecord.attributes.customer.fiscalcode", :default => "Codice Fiscale"), :class => :label %>
    <%= f.text_field :fiscalcode, :class => 'text_field' %>
    <span class="description">Inserire il Codice Fiscale solo se differente dalla Partita IVA</span>
  </div>

  <div class="group">
    <%= f.label :code, t("activerecord.attributes.customer.code", :default => "Codice Cliente"), :class => :label %>
    <%= f.text_field :code, :class => 'text_field' %>
    <span class="description">Il Codice Cliente utilizzato nel vecchio sistema applicativo</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Salva")}") %> <%= t("web-app-theme.save", :default => "Salva") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "oppure") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Annulla"), customers_path, :class => "text_button_padding link_button" %>
</div>
