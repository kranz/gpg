<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", esattori_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_esattore_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Esattori</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.esattore.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @esattori.each do |esattore| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= esattore.id %>
          </td>
                    <td>
            <%= link_to esattore.name, esattore_path(esattore) %>
          </td>
                    <td>
            <%= esattore.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", esattore_path(esattore) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_esattore_path(esattore) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", esattore_path(esattore), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= paginate @esattori  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
